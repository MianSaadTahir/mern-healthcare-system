{
  "info": {
    "_postman_id": "mern-healthcare-system-rebuild",
    "name": "MERN Healthcare System",
    "description": "Postman collection for the rebuilt MERN Healthcare System API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User (Patient)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"patient\"\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "users"]
            }
          },
          "response": []
        },
        {
          "name": "Register User (Doctor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Dr. Smith\",\n    \"email\": \"smith@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"doctor\",\n    \"specialization\": \"Cardiology\",\n    \"feesPerConsultation\": 100\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "users"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/auth",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "auth"]
            }
          },
          "response": []
        },
        {
          "name": "Get Authenticated User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5001/api/auth",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "auth"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Doctors",
      "item": [
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5001/api/doctors",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "doctors"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Book Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-auth-token",
                "value": "{{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"doctorId\": \"<DOCTOR_ID_HERE>\",\n    \"date\": \"2023-10-27\",\n    \"time\": \"10:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/appointments",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "appointments"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-auth-token",
                "value": "{{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5001/api/appointments",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "appointments"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
